<div class="sign-up">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters min)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %><br />
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/error_messages", resource: resource %>
